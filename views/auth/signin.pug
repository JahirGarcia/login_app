extends ../layouts/app

block custom_css
	link(rel='stylesheet', href='/css/auth.css')

block content
	form(method='post', action='/auth/signin').form-auth
		.text-center.mb-4
			img(src='/img/bootstrap-solid.svg', width='72', height='72').mb-3
			h1.h3.mb-3.font-weight-normal= title
		if message.length > 0
			.alert.alert-danger= message
		input(type='hidden', name='_csrf', value=csrfToken)
		.form-label-group
			input(type='email', name='email', placeholder='Email address', required, autofocus)#EmailAddress.form-control
			label(for='EmailAddress') Email address
		.form-label-group
			input(type='password', name='password', placeholder='Password', required)#Password.form-control
			label(for='Password') Password
		a(href='#').mb-1 Forgot your password?
		p.mb-1 Don't have an account?
			a(href='/auth/signup')
				|  Sign up
		.checkbox.mb-3
			label 
				input(type='checkbox')
				|  Remember me
		button(type='submit').btn.btn-block.btn-primary Sign in
